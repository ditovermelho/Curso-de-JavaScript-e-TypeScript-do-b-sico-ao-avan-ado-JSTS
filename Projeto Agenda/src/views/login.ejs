<%- include("includes/head") %>
<%- include("includes/nav") %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class=" text-center">Cirar conta ou Entrar</h1>
            <p class="text-center lead">Faça login ou crie sua conta abaixo.</p>

            <%- include("includes/messages") %>

            <div class="row">
                <div class="col-lg">
                    <h4>Crie sua conta</h4>
                    <p>Se você ainda não possui uma conta, preencha o formulário abaixo:</p>
                    <form action="/login/register" method="post">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="mb-3">
                          <label for="registerInputEmail" class="form-label">Seu e-mail</label>
                          <input type="email" class="form-control" name="registerInputEmail" aria-describedby="emailHelp">
                          <div name="emailHelp" class="form-text">Nunca compartilharemos seu e-mail com mais ninguém.</div>
                        </div>
                        <div class="mb-3">
                          <label for="registerInputPassword1" class="form-label">Senha</label>
                          <input type="password" class="form-control" name="registerInputPassword1">
                        </div>
                        <div class="mb-3 form-check">
                          <input type="checkbox" class="form-check-input" name="registerCheck">
                          <label class="form-check-label" for="registerCheck">Mostrar a Senha.</label>
                        </div>
                        <button type="submit" class="btn btn-primary">Criar a Conta</button>
                      </form>
                </div>

                <div class="col-lg">
                    <h4>Faça login</h4>
                    <p>Se você já possui uma conta, faça login abaixo:</p>
                    <form action="/login/login" method="post">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="mb-3">
                          <label for="loginInputEmail" class="form-label">Seu e-mail</label>
                          <input type="email" class="form-control" name="loginInputEmail" aria-describedby="emailHelp">
                          <div name="emailHelp" class="form-text">Nunca compartilharemos seu e-mail com mais ninguém.</div>
                        </div>
                        <div class="mb-3">
                          <label for="loginInputPassword" class="form-label">Senha</label>
                          <input type="password" class="form-control" name="loginInputPassword">
                        </div>
                        <div class="mb-3 form-check">
                          <input type="checkbox" class="form-check-input" name="loginCheck">
                          <label class="form-check-label" for="loginCheck">Mostrar a Senha.</label>
                        </div>
                        <button type="submit" class="btn btn-primary">Entrar</button>
                      </form>
                </div>
            </div>
        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include("includes/footer") %>